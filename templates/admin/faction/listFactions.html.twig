{% extends 'base.html.twig' %}

{% block title %}Liste des Factions{% endblock %}

{% block body %}

    <h1>Liste des Factions</h1>

    <a href="{{ path("admin_createFaction") }}">Cr√©er une nouvelle faction</a>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Faction</th>
                <th>Coef_HP</th>
                <th>Coef_MP</th>
                <th>Coef_Intel</th>
                <th>Coef_Strength</th>
                <th>Coef_Agi</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        
        <tbody>
        {% for faction in factions %}
            <tr>
                <td>{{ faction.id }}</td>
                <td>{{ faction.faction }}</td>
                <td>{{ faction.coefhp }}</td>
                <td>{{ faction.coefmp }}</td>
                <td>{{ faction.coefintel }}</td>
                <td>{{ faction.coefstrength }}</td>
                <td>{{ faction.coefagi }}</td>
                <td><a href="{{ path('faction_edit', {"id":faction.id}) }}">Editer</a></td>
                <td>{{ include('admin/faction/_delete_faction.html.twig') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path("admin") }}">Retour</a>
    


{% endblock %}

